Q-Link : https://leetcode.com/problems/add-one-row-to-tree/description/?envType=daily-question&envId=2024-04-16

/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:

    void helper(TreeNode* node,int val,int depth,int ourDepth){
        if(node==NULL)return ;
        if(ourDepth==depth-1){
            TreeNode* created=new TreeNode(val);
            created->left=node->left;
            node->left=created;

            TreeNode* created2=new TreeNode(val);
            created2->right=node->right;
            node->right=created2;

            return ;
        }

        helper(node->left,val,depth,ourDepth+1);
        helper(node->right,val,depth,ourDepth+1);


    }

    TreeNode* addOneRow(TreeNode* root, int val, int depth) {
        if(depth==1){
            TreeNode* node=new TreeNode(val);
            node->left=root;
            node->right=NULL;
            return node;
        }

        helper(root,val,depth,1);

        return root;
    }
};
